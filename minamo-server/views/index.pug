doctype html
html
 head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='prefetch', href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700')
  title !{title}
  style.
    body { display: none; background-color: #f9f9f9; }
 body
  #app !{markup}
  script !{appProps || ''} !{configJs}
  script(src='/styles.js', async)
  script(src='/loader.js', async)
  script(src='/bundle.js', async)
  script.
    window.setTimeout(function(){document.body.style.display='block'},1500);
