# set path to your redis.lua
lua_package_path "/usr/share/lua/5.1/nginx/?.lua;;";

map $http_upgrade $connection_upgrade {
	default upgrade;
	'' '';
}

# root domain
server {
	listen 80;
	listen [::]:80;
#	include /path/to/ssl.conf
	# set your root domain
	server_name example.com;
	location / {
		proxy_pass http://127.0.0.1:3000/;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}

# git host
server {
	listen 80;
	listen [::]:80;
#	include /path/to/ssl.conf
	client_max_body_size 500m;
	# set your git domain
	server_name git.example.com;
	location / {
		proxy_pass http://127.0.0.1:7000/;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;  
	}
}

# service mapper
server {
	listen 80 default;
	listen [::]:80 default;
#	include /path/to/ssl.conf
	location / {
		set $upstream "";
		rewrite_by_lua '
			-- try cached route first
			local redis  = require "redis"
			local red = redis:new()
			local client = red:connect("127.0.0.1", 16379)
			local route  = red:get(ngx.var.http_host)

			-- fallback to redis for lookups
			if type(route) == "string" then
				ngx.var.upstream = route
			else
				ngx.exit(ngx.HTTP_NOT_FOUND)
			end
		';
		proxy_buffering             off;
		proxy_http_version	    1.1;
		proxy_set_header            Host $host;
		proxy_set_header            X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	    Upgrade $http_upgrade;
		proxy_set_header	    Connection $connection_upgrade;
		proxy_redirect              off;
		proxy_connect_timeout       10;
		proxy_send_timeout          30;
		proxy_read_timeout          30;
		proxy_pass                  $upstream;
	}
}
